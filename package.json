{
  "name": "@saraswati-js/utilities",
  "description": "A monorepo of all the saraswati-js utilities used by the rest of the organization",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "docs": "doctoc --title '**Table of content**' README.md",
    "clean": "lerna run clean",
    "build": "lerna run build",
    "pub": "lerna publish",
    "test": "lerna run test",
    "todo": "leasot -x --reporter markdown './**/*.js' -i 'node_modules/**/*' > TODO.md"
  },
  "devDependencies": {
    "@nighttrax/eslint-config-tsx": "~7.0.0",
    "doctoc": "~2.0.0",
    "eslint": "~7.19.0",
    "lerna": "~3.22.0",
    "typescript": "~4.1.0"
  }
}
